<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/alert_item_background"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/sensor_number"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/sensor_number_background"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginRight="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor no. 1 activated!"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/alert_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Countermeasures deployed."
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/alert_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textSize="11sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>